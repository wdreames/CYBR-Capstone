{
    "manifest_version": 3,
    "name": "Facebook Logger",
    "version": "1.0",
    "description": "Logs text from Facebook Posts into the Chrome console log.",

    "content_scripts": [
        {
            "js": ["facebook-logger/content.js"],
            "css": ["facebook-logger/highlight.css"],
            "matches": [
                "https://www.facebook.com/*"
            ]
        }
    ],

    "host_permissions": [
        "http://127.0.0.1/*", 
        "https://william-reames.com/*"
    ],

    "permissions": ["activeTab", "scripting"]
}